<%- include("header") -%>

<div class="btnCon">
  <a href="/">Back</a>
</div>

<% let preMonth; if(currMonth == 1){preMonth = 12}else{preMonth = currMonth-1}%>
<% let filteredTrans = trans.filter((tran) => { return (tran.date.split("-")[0] == currYear && tran.date.split("-")[1] == preMonth) });%>

<% filteredTrans.sort(function(a, b) { return new Date(a.date) - new Date(b.date) }) %>


<div class="allTrans">
  <% for(tran of filteredTrans){%>
    <div class="tranCon">
      <div class="leftCon">
        <% if(tran.type == 'in'){%>
          <span class="inAmo">Rs.<%= tran.amount%></span>
          <% currIn += tran.amount %>
        <%}else{%>
          <span class="exAmo">Rs.<%= tran.amount%></span>
        <% currEx += tran.amount %>
        <%}%>
          <span><%= tran.date%></span>
      </div>
      <div class="rightCon">
        <form class="" action="/delTrans" method="post">
          <button class="delBtn" type="submit" name="delBtn" value="<%= tran._id%>+pre"><i class="fa-solid fa-xmark"></i></button>
        </form>
        <span><%= tran.des%></span>
      </div>
    </div>
  <%}%>
</div>

<div class="inExCon">
  <span class="inAmo">Rs.<%= currIn%></span>
  <span class="exAmo">Rs.<%= currEx%></span>
</div>

<div class="curr">
  <span>In Hand: </span>
  <span>
    <% let inHand = currIn - currEx%>
    <% if(inHand >= 0){%>
      <span class="inAmo">Rs.<%= inHand%></span>
    <%}else{%>
      <span class="exAmo">Rs.<%= inHand*-1%></span>
    <%}%>
  </span>
</div>


</body>
</html>
